{
  "port": 5555,
  "protocol": "https",
  "name": "account service",
  "stubs": [
    {
      "responses": [
        {
          "is": {
            "statusCode": 401,
            "headers": {
              "www-authenticate": "Basic realm=\"secret\""
            }
          }
        }
      ],
      "predicates": [
        {
          "exists": {
            "headers": {
              "authorization": false
            }
          }
        }
      ]
    },
    {
      "responses": [
        {
          "is": {
            "body": "<%- stringify(filename, 'account.xml') %>"
          }
        }
      ],
      "predicates": [
        {
          "equals": {
            "path": "/accounts/123",
            "method": "GET"
          }
        }
      ]
    },
    {
      "responses": [
        {
          "is": {
            "statusCode": 404
          }
        }
      ],
      "predicates": [
        {
          "not": {
            "equals": {
              "path": "/accounts/123",
              "method": "GET"
            }
          }
        }
      ]
    }
  ]
}
